{
  "frontend": {
    "server": "your-server.com",
    "username": "your-username",
    "port": 22,
    "remotePath": "/home/mockdatagenerator/frontend/",
    "localPath": "dist/",
    "sshKeyPath": "~/.ssh/id_rsa",
    "excludeFiles": [
      "*.log",
      "*.tmp",
      ".DS_Store"
    ]
  },
  "backend": {
    "server": "your-server.com",
    "username": "your-username", 
    "port": 22,
    "remotePath": "/home/mockdatagenerator/backend/",
    "localPath": "server/",
    "sshKeyPath": "~/.ssh/id_rsa",
    "excludeFiles": [
      "node_modules/",
      "*.log",
      ".env*",
      "*.db"
    ],
    "serviceRestart": "sudo systemctl restart mockdata-backend"
  },
  "database": {
    "host": "localhost",
    "port": 3306,
    "backupPath": "/home/mockdatagenerator/backups/"
  },
  "nginx": {
    "configPath": "/etc/nginx/sites-available/mockdata",
    "reloadCommand": "sudo nginx -t && sudo systemctl reload nginx"
  }
}